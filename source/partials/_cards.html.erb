<div id="flats">

  <div class="container">
    <div class="row">
      <h3>Recent Flats</h3>
        <!-- insert <div class="card"> -->

      <% data.users.each do |user| %>

        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: url(<%= image_path 'berlin.jpeg' %>)";>
            <div class="card-category">
              <h3> <%= data.cities.sample %> </h3>
            </div>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{user.github_nickname}", class: "card-user img-circle" %>
            <div class="card-description">
              <h2><%= user.name %>' flat</h2>
              <p>charming place</p>
              <p class="rating"><i class="fas fa-star rating-active"></i><i class="fas fa-star rating-active"></i><i class="fas fa-star rating-active"></i><i class="fas fa-star rating-active"></i><i class="fas fa-star"></i></p>
            </div>
            <%= link_to "", "/flats/#{user.github_nickname}", class: "card-link" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>

</div>

